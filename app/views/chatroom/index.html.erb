<h4 class="ui center aligned large icon header">
  <i class="circular inverted brown comments icon"></i>
  Say something...
</h4>

<div class="ui two column grid">

    <div class="twelve wide column">
        <div class="ui fluid raised card chatbox">
            <div class="content">
                <div class="ui feed">
                    
                    <%= render @messages %>

                </div>
            </div>
            <div class="extra content">
                <form class="ui reply form">
                    <div class="field">
                        <div class="ui fluid icon input">
                            <input type="text" placeholder="Type message...">
                            <i class="bordered inverted grey edit icon"></i>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="four wide column">
        <div class="ui fluid raised card chatbox">
            <div class="content">
                    <div class="ui inverted vertical fluid menu">
                    <a class="active item">
                        Home
                    </a>
                    <a class="item">
                        Messages
                    </a>
                    <a class="item">
                        Friends
                    </a>
                    </div>
                </div>
            </div>
        </div>

</div>